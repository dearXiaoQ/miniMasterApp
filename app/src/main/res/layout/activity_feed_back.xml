<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical"
    tools:context="com.mastergroup.smartcook.module.settings.FeedBackActivity">

    <include layout="@layout/view_top_bar"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        
        >
        
        <EditText
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/feedback_hint"
            android:background="@null"
            android:textSize="14sp"
            />

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_above="@+id/phone_ll"
            android:background="@color/supper_gray"
            ></LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:id="@+id/phone_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            />
        <EditText
            android:id="@+id/phone_num_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="@string/phone_hint"
            android:background="@null"
            android:textSize="14sp"
            />
    </LinearLayout>
        
    </RelativeLayout>




</LinearLayout>
