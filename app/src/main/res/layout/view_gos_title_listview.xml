<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/dev_list_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvListViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:text="TextView"
        android:textColor="@color/app_text_color_dark555"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"/>

    <LinearLayout
        android:id="@+id/llHaveNotDevice"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_below="@+id/tvListViewTitle"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="@string/havenot_device"
            android:textColor="@color/black"/>
    </LinearLayout>

    <com.mastergroup.smartcook.view.SlideListView2
        android:id="@+id/slideListView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvListViewTitle"
        android:background="@color/white"
        android:divider="@color/line_gray"
        android:dividerHeight="0.5dp"
        android:listSelector="@drawable/devicelist_item_selector">
    </com.mastergroup.smartcook.view.SlideListView2>

</RelativeLayout>